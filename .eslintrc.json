{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "plugins": ["jest"],
  "rules": {
    "comma-spacing": ["off"],
    "indent": ["off", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "no-console": ["off"],
    "no-unused-vars": [
      "off",
      {
        "argsIgnorePattern": "^_|[Ii]gnored",
        "varsIgnorePattern": "^_|[Ii]gnored|[Nn]otUsed"
      }
    ],
    "semi": ["off", "always"],

    "no-undef": ["off"]
  }
}
